{
    "manifest_version": 3,
    "name": "Your Extension Name",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
        // 'default_popup' is optional
    },
    "background": {
        "service_worker": "background.js"
    }
    // Other necessary manifest fields...
}
